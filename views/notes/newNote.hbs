{{#each errors}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  {{ text }}
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/each}}


<div class="col md-4 mx-auto">
    <div class="card">
    <div class="card-header">
       <h3>Agregar Nota</h3> 
    </div>
    <div class="card-body">
        <form action="/notes/newNote" method="POST">
        <div class="form-group">
            <input type="text" name="title" class="form-control" placeholder="Título" autofocus>
        </div>
        
        <div class="form-group">
            <textarea type="textarea" name="description" class="form-control" placeholder="Descripción"></textarea>
        </div>

        <div class="form-group">
            <button class="btn btn-primary col-12 mt-2" type="submit">Añadir</button>
        </div>
        </form>
    </div>
</div>
</div>